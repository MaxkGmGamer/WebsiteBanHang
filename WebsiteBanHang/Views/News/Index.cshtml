@model IEnumerable<WebsiteBanHang.Context.News>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/css/news.css" rel="stylesheet" />


<section class="section-content padding-y">
    <div class="container">

        <nav class="row">
            <div class="col-md-6">
                @foreach (var item in Model)
                {
                    <div class="card card-category">
                        <div class="card-body">
                            
                                <img src="~/Content/images/items/@item.Avatar" />
                            
                            <div>
                                <a href="@Url.Action("Detail","News",new{area = "",ID = item.ID})"><h1>@item.Title</h1></a>


                                <h6>Người đăng: @item.Author</h6>
                                <h6>Ngày đăng: @item.CreatedDate</h6>

                            </div>
                        </div>
                    </div>

                    
                }
            </div>
        </nav>
    </div>
</section>




